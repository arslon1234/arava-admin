{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,
    "paths": {
      "@/*": ["./*"],
      "@layout": ["./src/layout"],
      "@pages": ["./src/pages"],
      "@router": ["./src/router"],
      "@validations": ["./src/validations"],
      "@interface": ["./src/types/interface"],
      "@ui": ["./src/components/ui"],
      "@modals": ["./src/components/modals"],
      "@drawers": ["./src/components/drawers"],


      "@cookie": ["./src/utils/cookie.ts"],
      "@service-auth": ["./src/service/auth"],

      "@company": ["./src/service/company"],
      "@country": ["./src/service/country"],
      "@banner": ["./src/service/banner"],
      "@brand": ["./src/service/brand"],
      "@brand-type": ["./src/service/brand-type"],
      "@city": ["./src/service/city"],
      "@сouriers": ["./src/service/сouriers"],
      "@region": ["./src/service/region"],









      "@store": ["./src/store"],

    },

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true
  },
  "include": ["src"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
